<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="nl.ladyminks.thirtyoneseconds.app">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="nl.ladyminks.thirtyoneseconds.app.MyApplicationImpl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="nl.ladyminks.thirtyoneseconds.presentation.pages.customgame.CustomGameActivity" />
        <activity android:name="nl.ladyminks.thirtyoneseconds.presentation.pages.game.GameActivity" />
        <activity android:name="nl.ladyminks.thirtyoneseconds.presentation.pages.editteam.EditTeamActivity" />
        <activity android:name="nl.ladyminks.thirtyoneseconds.presentation.pages.teammanager.TeamManagerActivity" />
        <activity android:name="nl.ladyminks.thirtyoneseconds.presentation.pages.statistics.StatisticsActivity"/>
        <activity
            android:name="nl.ladyminks.thirtyoneseconds.presentation.pages.home.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>