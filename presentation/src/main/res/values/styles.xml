<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RecyclerView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#9C27B0</item>
    </style>

    <style name="RoundedButtonTheme">
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:background" >@drawable/ic_button_rounded_corner</item>
        <item name="android:paddingEnd">@dimen/margin2</item>
        <item name="android:paddingStart">@dimen/margin2</item>
    </style>

    <style name="SquareButtonTheme">
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:background" >@drawable/ic_button_square</item>
        <item name="android:padding">@dimen/margin1</item>
    </style>


</resources>
